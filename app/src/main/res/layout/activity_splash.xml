<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_splash"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorGreen"
    tools:context="com.example.farzadfarshad.adeiye.SplashActivity">

    <TextView
        android:id="@+id/name_app_txt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="40sp"
        android:textColor="@color/White"
        android:layout_above="@+id/image_tarahi"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="10dp"
        android:text="ادعیه" />

    <ImageView
        android:id="@+id/image_tarahi"
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:background="@drawable/graphic"
        android:layout_centerInParent="true"
        android:layout_centerHorizontal="true"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="آپدیت شده در زمستان 96"
        android:layout_alignParentBottom="true"
        android:textColor="@color/White"
        android:textSize="25sp"
        android:layout_centerHorizontal="true"/>

</RelativeLayout>
