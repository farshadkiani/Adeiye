<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/activity_change_color"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/White"
    tools:context="com.example.farzadfarshad.adeiye.Activity.ChangeColorActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:orientation="vertical">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:background="@color/colorGreen"
            android:gravity="center"
            android:text="@string/app_name"
            android:textSize="15sp"
            android:textColor="@color/White"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="8dp"
            android:weightSum="1">

            <RelativeLayout
                android:id="@+id/relative1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="0.5">

                <ImageView
                    android:id="@+id/select_img1"
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:layout_alignParentRight="true"
                    android:layout_marginRight="8dp"
                    android:layout_marginTop="8dp"
                    android:background="@drawable/circleshapegray" />

                <com.cuboid.cuboidcirclebutton.CuboidButton
                    android:id="@+id/doaahd_btn1"
                    android:layout_width="80dp"
                    android:layout_height="80dp"
                    android:layout_centerInParent="true"
                    android:layout_marginRight="20dp"
                    android:layout_marginTop="8dp"
                    android:text="دعای عهد"
                    android:textColor="@android:color/white"
                    android:textSize="16sp"
                    app:cub_border_color="@color/colorAccent"
                    app:cub_border_radius="4dp"
                    app:cub_color="@color/narengi"
                    app:cub_hover_color="@color/colorAccent"
                    app:cub_riple_effect="true" />

            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/relative2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="0.5">

                <ImageView
                    android:id="@+id/select_img2"
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:layout_alignParentRight="true"
                    android:layout_marginRight="8dp"
                    android:layout_marginTop="8dp"
                    android:background="@drawable/circleshapegray" />

                <com.cuboid.cuboidcirclebutton.CuboidButton
                    android:id="@+id/doaahd_btn2"
                    android:layout_width="80dp"
                    android:layout_height="80dp"
                    android:layout_centerInParent="true"
                    android:layout_marginRight="20dp"
                    android:text="دعای عهد"
                    android:textColor="@android:color/white"
                    android:textSize="16sp"
                    android:layout_marginTop="8dp"
                    app:cub_border_color="@color/colorAccent"
                    app:cub_border_radius="4dp"
                    app:cub_color="@color/ghermez"
                    app:cub_hover_color="@color/colorAccent"
                    app:cub_riple_effect="true" />

            </RelativeLayout>


        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:orientation="horizontal"
            android:weightSum="1">

            <RelativeLayout
                android:id="@+id/relative3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="0.5">

                <ImageView
                    android:id="@+id/select_img3"
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:layout_alignParentRight="true"
                    android:layout_marginRight="8dp"
                    android:layout_marginTop="8dp"
                    android:background="@drawable/circleshapegray" />

                <com.cuboid.cuboidcirclebutton.CuboidButton
                    android:id="@+id/doaahd_btn3"
                    android:layout_width="80dp"
                    android:layout_height="80dp"
                    android:layout_centerInParent="true"
                    android:layout_marginRight="20dp"
                    android:layout_weight="0.5"
                    android:layout_marginTop="8dp"
                    android:text="دعای عهد"
                    android:textColor="@android:color/white"
                    android:textSize="16sp"
                    app:cub_border_color="@color/colorAccent"
                    app:cub_border_radius="4dp"
                    app:cub_color="@color/sabz"
                    app:cub_hover_color="@color/colorAccent"
                    app:cub_riple_effect="true" />

            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/relative4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="0.5">

                <ImageView
                    android:id="@+id/select_img4"
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:layout_alignParentRight="true"
                    android:layout_marginRight="8dp"
                    android:layout_marginTop="8dp"
                    android:background="@drawable/circleshapegray" />

                <com.cuboid.cuboidcirclebutton.CuboidButton
                    android:id="@+id/doaahd_btn4"
                    android:layout_width="80dp"
                    android:layout_height="80dp"
                    android:layout_centerInParent="true"
                    android:layout_marginRight="20dp"
                    android:layout_weight="0.5"
                    android:text="دعای عهد"
                    android:layout_marginTop="8dp"
                    android:textColor="@android:color/white"
                    android:textSize="16sp"
                    app:cub_border_color="@color/colorAccent"
                    app:cub_border_radius="4dp"
                    app:cub_color="@color/colorPrimary"
                    app:cub_hover_color="@color/colorAccent"
                    app:cub_riple_effect="true" />

            </RelativeLayout>

        </LinearLayout>


        <Button
            android:id="@+id/done_btn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginBottom="8dp"
            android:layout_marginTop="8dp"
            android:background="@drawable/rectangel_button"
            android:text="@string/done"
            android:textColor="@color/White" />


    </LinearLayout>

</RelativeLayout>
